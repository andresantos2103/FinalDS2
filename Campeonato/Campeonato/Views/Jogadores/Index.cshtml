@model IEnumerable<Campeonato.Models.Jogador>

@{
    ViewData["Title"] = "Index";
}

<h2>Jogadores Existentes</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Jogador</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JogadorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JogadorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JogadorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
